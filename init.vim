let g:airline#extensions#tabline#formatter = 'default'
let g:airline_powerline_fonts = 1
let g:airline_theme = 'gruvbox'

let g:embark_terminal_italics = 1

let g:gruvbox_transparent_bg = 1

filetype on
filetype plugin on
filetype indent on

" == VIM PLUG ================================
call plug#begin('~/.vim/plugged')

